# Server environment variables

# Server configuration
PORT=5000
NODE_ENV=development

# PostgreSQL Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=quizgame
DB_SYNC=true  # Set to 'true' to auto-create tables in development
MOCK_DB=false # Set to 'true' to skip database connection in development

# Client URL for CORS and redirects
# For local development on the same machine:
CLIENT_URL=http://localhost:5173

# For local development with mobile devices (use your machine's IP):
# CLIENT_URL=http://192.168.0.87:5173

# For production with a domain:
# CLIENT_URL=https://yourdomain.com

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=debug
